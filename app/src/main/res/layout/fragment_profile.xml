<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffff"
            >
            <!--        <androidx.appcompat.widget.AppCompatTextView-->
            <!--            android:gravity="left|center"-->
            <!--            android:id="@+id/welcomeText"-->
            <!--            android:layout_marginStart="20dp"-->
            <!--            android:text="@string/profile_fragment_toolbar"-->
            <!--            android:textStyle="bold"-->
            <!--            android:textSize="@dimen/_18ssp"-->
            <!--            android:textColor="@color/colorPrimary"-->
            <!--            android:layout_alignParentStart="true"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            tools:ignore="RtlCompat"-->
            <!--            />-->

            <!--        <ImageView-->
            <!--            android:foregroundGravity="center"-->
            <!--            android:layout_width="@dimen/_50sdp"-->
            <!--            android:layout_height="?attr/actionBarSize"-->
            <!--            android:layout_alignParentRight="true"-->
            <!--            android:layout_alignParentBottom="true"-->
            <!--            android:layout_alignParentEnd="true"-->
            <!--            android:layout_margin="@dimen/_8sdp"-->
            <!--            android:contentDescription="TODO" />-->
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Name "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/back_ground">
        </View>

        <RelativeLayout
            android:id="@+id/profile_fragment_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <ImageView
                android:id="@+id/profile_fragment_profile_image"
                android:foregroundGravity="center|center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_user"
                tools:ignore="RtlCompat"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/profile_fragment_profile_image"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_fragment_edit_profile"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/colorAccent"
                tools:ignore="RtlCompat" />


            <ImageView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/back_ground">
        </View>
        <RelativeLayout
            android:id="@+id/profile_fragment_change_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <ImageView
                android:id="@+id/profile_fragment_change_pass_image"
                android:foregroundGravity="center|center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_password_reset"
                tools:ignore="RtlCompat"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/profile_fragment_change_pass_image"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_fragment_change_password"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/colorAccent"
                tools:ignore="RtlCompat" />


            <ImageView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>


        <View
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/back_ground">
        </View>

        <RelativeLayout
            android:id="@+id/profile_fragment_who_are_we"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <ImageView
                android:id="@+id/profile_fragment_condition_image"
                android:foregroundGravity="center|center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_who"
                tools:ignore="RtlCompat"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/profile_fragment_condition_image"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_fragment_who_are_we"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/colorAccent"
                tools:ignore="RtlCompat" />


            <ImageView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/back_ground">
        </View>

        <RelativeLayout
            android:id="@+id/profile_fragment_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <ImageView
                android:id="@+id/profile_fragment_logout_image"
                android:foregroundGravity="center|center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_sign_out"
                tools:ignore="RtlCompat"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/profile_fragment_logout_image"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_fragment_logout"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/colorAccent"
                tools:ignore="RtlCompat" />


            <ImageView
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/back_ground">
        </View>

        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contact with us"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_7sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_facebook"
                tools:ignore="RtlCompat"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_twitter"
                tools:ignore="RtlCompat"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_whatsapp"
                tools:ignore="RtlCompat"
                />

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/back_ground">
        </View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/profile_fragment_terms_conditions"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_fragment_terms_and_conditions"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:gravity="center"/>





    </LinearLayout>


</ScrollView>