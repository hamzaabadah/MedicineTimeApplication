<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginStart="@dimen/_1sdp"
    tools:ignore="RtlCompat">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/back_ground"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:outlineSpotShadowColor="@color/colorPrimary"
        app:cardElevation="@dimen/_2sdp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_next_visit_id_clinic_name"
                android:text="Clinic Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_next_visit_id_doctor_name"
                android:textSize="@dimen/_14ssp"
                android:text="Doctor Name"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_next_visit_id_visit_at"
                android:textStyle="italic"
                android:textSize="@dimen/_14ssp"
                android:text="2020-07-23 00:00:00"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"/>

            <View
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/back_ground">
            </View>

            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/item_next_visit_ditalis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_next_visit_details"
                    android:textSize="@dimen/_12ssp"
                    />

                <ImageView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/item_next_visit_ditalis"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>